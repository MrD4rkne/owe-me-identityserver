# EditorConfig file for OweMe.Identity
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Suppress warnings in generated or scaffolded code (Pages)
[**/Pages/**/*.cs]
